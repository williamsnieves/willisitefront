@media screen and (min-width:680px)
	header
		height auto
	.icon-menu-willi
		display none
	.header-logo
		display none
	.main-menu-tablet
		display block
		background #4d4d4d
		height 58px

	.logo-tablet
		margin 0.8em

	.top-bar-section li:not(.has-form) a:not(.button)
		background #4d4d4d
		line-height 58px
	#list-tablet-opc a
		position relative
	#list-tablet-opc a
		&:hover
			background #4d4d4d
			font-size 1em
			&:after
				border-left solid 40px transparent
				border-right solid 40px transparent
				border-top solid 20px #4d4d4d
				content ""
				height 0
				margin-left -2.4em
				position absolute
				top 3.6em
				left: 50%;
				width 0
				
				


@media screen and (max-width:320px)
