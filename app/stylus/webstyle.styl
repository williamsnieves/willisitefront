@import 'normalize.styl'
@import 'font.styl'

body
	font-size 16px

header
	background #14235c
	height 60px
	width 100%

.header-logo
	margin 0 auto
	position relative
	width 115px
	z-index 99999
	top -1.8em
	img
		width 100%

.fixed-menu
	position fixed
	z-index 99999999999

.main-menu
	display block
	background #2a9dde
	ul
		margin 0
		list-style none
		li
			a
				display block
				text-align center
				color #fff
				margin-top 0.8em
				&:hover
					background 	#14235c

.main-menu-tablet
	display none

.space-menu
	width 100%
	height 50px	

.profile-image
	background #fff

.profile-image figure
	background #fff
	margin 0
	img
		width 100%

.content-profile-description
	background #fff
	height 150px;
	position relative
	z-index: 11
	h2
		color #14235c
		text-align center
	p
		text-align center
		color #14235c

		&:nth-child(even)
			margin-bottom 0
		&:nth-child(odd)
			margin-top 0

.content-profile-description
	&:after
		border-left solid 50px transparent
		border-right solid 50px transparent
		border-top solid 20px #fff
		content ""
		height 0
		left 50%
		margin-left -50px
		position absolute
		top 100%
		width 0

.bio-description
	position relative

.bg-bio
	background #4d4d4d
	margin 0
	position relative
	top 0
	left 0
	img
		width 48.3em
		height 37.375em

.info-title-profile
	position absolute
	z-index 9
	h2
		padding 1.5em 0 0 1em
		margin 0
		color #fff
		text-transform uppercase
	h4
		color #fff
		font-weight normal
		margin -0.5em 0 0 1.5em


.info-profile
	position absolute
	z-index 9
	top 10em
	p
		color #fff
		margin 0 2em 0 2em
		text-align left


.skill-content
	background #4d4d4d
	position relative
	z-index: 9
	.title-skill
		width 30%
		margin 0
		padding 0
		height auto
		color #fff
		float left
		h2
			margin 1em 0 0 2em
	.list-skill	
		width 70%
		height auto
		color #fff
		margin 0 0 2em 0
		display inline-block
		/*padding 1em 0 1em 3em*/
		ul
			list-style none
			margin 2em

	figure
		margin 0
		img
			width 100%

.skill-content
	&:after
		border-left solid 50px transparent
		border-right solid 50px transparent
		border-top solid 20px #4d4d4d
		content ""
		height 0
		left 50%
		margin-left -50px
		position absolute
		top 100%
		width 0

.item-categories
	position relative
	height 15em
	h3
		margin 0
		position relative
		top 50%
		text-align center
	&:nth-child(1)
		background #2fa5e2;
	&:nth-child(2)
		background #c2ee5b
	&:nth-child(3)
		background #2effe0
		position relative
		&:after
			border-left solid 50px transparent
			border-right solid 50px transparent
			border-top solid 20px #2effe0
			content ""
			height 0
			left 50%
			margin-left -50px
			position absolute
			top 100%
			width 0


.contact-form-wrapper
	h2
		text-align center
		margin 2em 0 0 0
		color #4e4e4e
	label
		&:first-child
			color #a5a5a5
			margin 2em 2em 0 2em
	label
		color #a5a5a5
		margin 0 2em 0 2em

.image-cat
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	-webkit-background-size cover
	background-size cover
	background-repeat no-repeat
	background-position 50% 0
	-webkit-transition -webkit-transform .35s
	transition transform .35s
	-webkit-transition-timing-function ease-out
	transition-timing-function ease-out
	-webkit-backface-visibility hidden
	backface-visibility hidden

.mesh-image
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	height: 100%;
	-webkit-background-size: cover;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: 50% 0;
	-webkit-transition: -webkit-transform .35s;
	transition: transform .35s;
	-webkit-transition-timing-function: ease-out;
	transition-timing-function: ease-out;
	-webkit-backface-visibility: hidden;
	backface-visibility: hidden;
	opacity: .8;
	-webkit-transition: opacity .4s;
	transition: opacity .4s;
	background-position: center center;

.image-cat
	&:hover .mesh-image
		-webkit-transform scale(1)
		-ms-transform scale(1)
		transform scale(1)
		-webkit-transition -webkit-transform 0s linear
		transition transform 0s linear

#line-input-name
	border 0
	border-bottom 2px solid #000
	outline none
	box-shadow none


#line-input-email
	border 0
	border-bottom 2px solid #000
	outline none
	box-shadow none

#line-input-message
	border 0
	border-bottom 2px solid #000
	outline none
	box-shadow none
	margin-bottom 2em
	

.center-buttton-form
	display block
	width 114px
	margin 0 auto
	border-radius 0.5em
	background transparent
	color #4e4e4e
