rotateline(param)
	-webkit-transform rotate(param)
	transform rotate(param)
	
drawline(width, height, position, top, right, mt, mr, mb, ml, background)
	width width
	height height
	position position
	top top
	right right
	margin mt mr mb ml
	background background
	

